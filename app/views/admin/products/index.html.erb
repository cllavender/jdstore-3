<h2>Products List</h2>
<div class="pull-right"  style="padding-bottom: 20px;">
    <%= link_to("Add new product",new_admin_product_path, class: "btn btn-primary btn-sm") %>
</div>

<table class="table table-bordered">
    <thead>
        <th>#</th>
        <th width="220">Product image</th>
        <th>Name</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Options</th>
    </thead>
    
    <tbody>
        <% @products.each do |product| %>
        <tr>
            <td><%= product.id %></td>
            <td>
              <%= link_to admin_product_path(product) do %>
                <% if product.img.present? %>
                  <%= image_tag(product.img.thumb.url, class: "thumbnail") %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                <% end %>
              <% end %>
            </td>
            <td>
              <%= link_to(product.title, admin_product_path(product)) %>
            </td>
            <td><%= product.quantity %></td>
            <td><%= product.price %></td>
            <td>
                <%= link_to("Edit",edit_admin_product_path(product)) %> |
                <%= link_to("Destroy",admin_product_path(product),method: :delete, data: { :confirm => "Are you sure?" }) %>
            </td>
        </tr>
        <% end %>
    </tbody>

</table>
